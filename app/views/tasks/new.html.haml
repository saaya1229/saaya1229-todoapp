.container
  %ul
    - @task.errors.full_messages.each do |message|
      %li= message

  = form_with(model: @task, url: article_tasks_path(@task.article), local: true) do |f|
    %div
      = f.label :title, 'Name'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :title, 'Description'
    %div
      = f.text_area :content
    = f.submit 'Submit', class: 'btn-primary'